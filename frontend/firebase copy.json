{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/sign-upload-url",
        "function": {
          "functionId": "sign-upload-url",
          "region": "europe-west4"
        }
      },
      {
        "source": "/api/chat",
        "function": {
          "functionId": "chat",
          "region": "europe-west4"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
